{
  "extends": "@terminus/tslint-config-frontend",
  "rules": {
    "component-selector": [
      true,
      "element",
      "ts",
      "kebab-case"
    ],
    "directive-selector": [
      true,
      "attribute",
      "ts",
      "camelCase"
    ],
    "pipe-prefix": [
      true,
      "ts"
    ],
    "no-host-metadata-property": false,
    "no-implicit-dependencies": false,
    "no-unsafe-any": false,
    "template-accessibility-label-for": [
      false,
      {
        "controlComponents": [
          "ts-checkbox"
        ]
      }
    ],
    "use-host-property-decorator": false
  }
}
