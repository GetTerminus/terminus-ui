{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "demo",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/out-tsc",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "@terminus/ui": ["./dist/terminus-ui/public-api.ts"]
    }
  },
  "exclude": [
    ".ng_build"
  ]
}
