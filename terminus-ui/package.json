{
  "name": "@terminus/ui",
  "description": "The Terminus UI Library",
  "version": "0.0.0-PLACEHOLDER",
  "license": "MIT",
  "author": "@terminus",
  "homepage": "https://github.com/GetTerminus/terminus-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/GetTerminus/terminus-ui.git"
  },
  "bugs": {
    "url": "https://github.com/GetTerminus/terminus-ui/issues"
  },
  "release": {
    "verifyConditions": [
      "condition-circle",
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "getLastRelease": "@semantic-release/npm",
    "publish": [
      {
        "path": "@semantic-release/exec",
        "cmd": "./tooling/inject-version.sh ${nextRelease.version}"
      },
      {
        "path": "@semantic-release/npm",
        "npmPublish": true,
        "pkgRoot": "dist/terminus-ui"
      },
      {
        "path": "@semantic-release/github",
        "npmPublish": false
      }
    ]
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0",
    "yarn": ">= 1.0.0"
  },
  "dependencies": {
    "@angular/cdk": "5.2.0",
    "@angular/material": "5.2.0",
    "text-mask-addons": "^3.7.2",
    "text-mask-core": "^5.0.1"
  },
  "peerDependencies": {
    "@angular/animations": "^5.2.5",
    "@angular/core": "^5.2.5",
    "@angular/forms": "^5.2.5",
    "@angular/platform-browser": "^5.2.5",
    "@angular/router": "^5.2.5",
    "@terminus/ngx-tools": "^2.10.0"
  },
  "ngPackage": {
    "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
    "workingDirectory": "../.ng_build",
    "lib": {
      "entryFile": "src/public-api.ts",
      "comments": "none"
    },
    "dest": "../dist/terminus-ui"
  }
}
