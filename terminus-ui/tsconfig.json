{
  "extends": "./../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "rootDir": ".",
    "baseUrl": "",
    "types": []
  },
  "files": [
    "./src/index.ts",
    "./typings.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.mock.ts"
