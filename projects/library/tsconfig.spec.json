{
  "extends": "./../../tsconfig.json",
  "includes": [
    "projects/**/!(*spec|*mock|*d).ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "jsdom",
      "jest"
    ],
    "paths": {
      "@terminus/ui": [
        "dist/library/terminus-ui",
        "dist/library"
      ]
    }
  }
}
